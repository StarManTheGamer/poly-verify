{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "outDir": "dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true,
		"checkJs": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
			"tslib": ["/node_modules/tslib/tslib.d.ts"]
		},
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  }
}